{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"babel"
	],
	"rules": {
		"no-tabs": "off",
		"indent": "off",
		"react/jsx-indent": "off",
		"react/jsx-one-expression-per-line": "off",
		"react/prop-types": "off",
		"react/jsx-indent-props": "off",
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		]
	}
}
